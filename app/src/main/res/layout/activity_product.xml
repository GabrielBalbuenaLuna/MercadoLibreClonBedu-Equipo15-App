<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:background="@drawable/shoes"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            />

        <Button
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@drawable/round_button"
            android:text="1/3"
            android:textSize="8dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ratingPart"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@+id/productImage"
        android:paddingHorizontal="60dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/firstStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filled_star"
            />

        <ImageView
            android:id="@+id/secondStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filled_star"
            android:layout_marginLeft="56dp"
            />

        <ImageView
            android:id="@+id/thirdStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filled_star"
            android:layout_marginLeft="112dp"
            />

        <ImageView
            android:id="@+id/fourthStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/half_filled_star"
            android:layout_marginLeft="168dp"
            />

        <ImageView
            android:id="@+id/fifthStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_star"
            android:layout_marginLeft="224dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/productInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ratingPart"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp"
        >


        <TextView
            android:id="@+id/productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/blackColor"
            android:text="Black men's casual sneakers"/>

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="$250"
            android:textColor="@color/blackColor"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/productQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Quantity: "
            android:textColor="@color/blackColor"
            android:layout_marginTop="64dp"/>

        <Button
            android:id="@+id/minusProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="80dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="18dp"
            android:backgroundTint="@color/lightGray"
            android:textColor="@color/blackColor"/>

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_marginTop="64dp"
            android:layout_marginLeft="128dp"
            android:textColor="@color/blackColor"
            />

        <Button
            android:id="@+id/addProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="148dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="18dp"
            android:backgroundTint="@color/lightGray"
            android:textColor="@color/blackColor"/>

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/blackColor"
            android:text="Size"
            android:layout_marginTop="104dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sizeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/productInfo"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginLeft="28dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sizeS"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_white"
            android:text="S"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="@color/blackColor"
            android:layout_marginTop="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sizeM"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_deselect"
            android:text="M"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="@color/blackColor"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sizeL"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_deselect"
            android:text="L"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="@color/blackColor"
            android:layout_marginLeft="192dp"
            android:layout_marginTop="8dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sizeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sizeButtons"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp">

        <TextView
            android:id="@+id/sizeSpecifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height: 30cm, Width: 20 cm, Heel: 5 cm"
            android:background="@drawable/rounded_gray_text"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Arrives in 5 days"
            android:drawableLeft="@drawable/bus_delivery"
            android:drawablePadding="8dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sizeDetails"
        app:layout_constraintStart_toEndOf="parent"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buyButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Buy now"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:background="@drawable/button_buy_now"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addCartButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="@drawable/button_add_cart"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>