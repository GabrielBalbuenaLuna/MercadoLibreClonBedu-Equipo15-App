<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cardImageFavorites">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">120dp</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/background</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>
    <style name="StyleGuide">
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textNormal</item>
        <item name="android:textColorSecondary">@color/textLight</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>
    <style name="Toolbar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/Toolbar</item>
    </style>
</resources>